{
    "compilerOptions": {
        "strict": true,
        "rootDir": "./src",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "esModuleInterop": true,
     },
     "include": ["src/**/*", "src/typings"],
     "exclude": ["node_modules"]
}